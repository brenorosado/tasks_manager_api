{
    "openapi": "3.0.0",
    "info": {
        "title": "Tasks manager API",
        "description": "Tasks manager API description",
        "termsOfService": "https://github.com/brenorosado",
        "contact": {
            "name": "Breno Rosado",
            "email": "brenorosado.cjr@gmail.com"
        },
        "version:": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080",
            "description": "Tasks manager API"
        }
    ],
    "paths": {
        "/account": {
            "post": {
                "summary": "Account creation",
                "description": "This route is responsible for creating a new account",
                "tags": ["Account"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AccountCreationRequest"
                            },
                            "examples": {
                                "account": {
                                    "value": {
                                        "email": "string",
                                        "password": "string",
                                        "name": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Missing/Invalid attributes"
                    },
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "account": {
                                            "$ref": "#/components/schemas/AccountCreationResponse"
                                        },
                                        "token": {
                                            "$ref": "#/components/schemas/Token"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/account/{id}": {
            "get": {
                "summary": "Get logged user account",
                "description": "This route return the logged user account information",
                "tags": ["Account"],
                "parameters": [{
                    "in": "path",
                    "name": "id",
                    "required": true,
                    "schema": {
                        "type": "string"
                    },
                    "description": "The user's account ID"
                }],
                "responses": {
                    "400": {
                        "description": "Missing/Invalid attributes"
                    },
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "account": {
                                            "$ref": "#/components/schemas/AccountCreationResponse"
                                        },
                                        "token": {
                                            "$ref": "#/components/schemas/Token"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AccountCreationRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    }
                }
            },
            "AccountCreationResponse": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "verifiedEmail": {
                        "type": "boolean"
                    },
                    "deleted": {
                        "type": "boolean"
                    }
                }
            },
            "Token": {
                "type": "string"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [{
        "bearerAuth": []
    }]
}